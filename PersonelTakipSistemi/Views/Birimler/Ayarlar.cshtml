                        $(this).select2({
                            theme: 'bootstrap-5',
                            dropdownParent: $(this).closest('.modal'),
                            width: '100%'
                        });
                    }
                });
            });

            // DEBUG: List all commissions
            console.log('[Ayarlar] Debug: Listing all commissions...');

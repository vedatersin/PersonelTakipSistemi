@section Scripts {
    <script>
        // ============================================
        // GLOBAL STATE
        // ============================================
        var selectedDaireId = null;
        var selectedTeskilatId = null;
        var selectedKoordId = null;

        // List of City IDs that have a Provincial Coordinatorship (Teskilat.Tur = "Taşra")
        var validTasraCityIds = @Html.Raw(Json.Serialize(Model.Koordinatorlukler.Where(x => x.Teskilat != null && x.Teskilat.Tur == "Taşra" && x.IlId.HasValue).Select(x => x.IlId.Value).Distinct().ToList()));

        $(document).ready(function() {
            console.log('[Ayarlar] Document ready. Initializing cascading...');
            
            // Initial Sorting for all lists
            sortListDynamically($('#listDaire'), 'daire-passive');
            sortListDynamically($('#listTeskilat'), 'tes-passive');
            sortListDynamically($('#listKoordinatorluk'), 'k-passive');
            sortListDynamically($('#listKomisyon'), '');

            // Debug: log all tes-item data
            $('.tes-item').each(function() {
                console.log('[Ayarlar] Teskilat item:', $(this).data('id'), 'parent:', $(this).attr('data-parent-id'));
            });

            // 1. Initial Cascade - Find the default active Daire
            var activeDaire = $('#listDaire .daire-active-item');
            if(activeDaire.length > 0) {
                var dId = parseInt(activeDaire.attr('data-id'));
                console.log('[Ayarlar] Auto-selecting Daire ID:', dId);
                selectDaire(activeDaire[0], dId);
            }
            
            // 2. Modal Show Event: Pre-select Daire dropdown
            // 2. Modal Show Event: Pre-select Daire dropdown
            // 2. Modal Show Event: Pre-select Daire dropdown
            $('#modalTeskilat').on('show.bs.modal', function () {
                // Reset Fields
                $('#addTesAd').val('');
                $('#addTesTanim').val('');
                $('#addTesTasraVar').prop('checked', true);
                $('input[name="tesType"][value="Merkez"]').prop('checked', true);
                toggleTeskilatFields();

                if(selectedDaireId) {
                    console.log('[Ayarlar] Pre-selecting Daire in Modal:', selectedDaireId);
                    $('#addTesParent').val(selectedDaireId).trigger('change');
                } else {
                    // Try to finding active item in list
                    var activeItem = $('#listDaire .daire-item.active');
                    if(activeItem.length > 0) {
                        var dId = activeItem.data('id');
                        $('#addTesParent').val(dId).trigger('change');
                    } else {
                        // Inherit first option if available (User expectation: "seçili geleni otomatik doldur")
                        var firstOption = $('#addTesParent option:eq(1)').val();
                        if(firstOption) {
                             $('#addTesParent').val(firstOption).trigger('change');
                        } else {
                             $('#addTesParent').val('').trigger('change');
                        }
                    }
                }
            });

            // Toggle Logic for Teskilat Modal
            window.toggleTeskilatFields = function() {
                var type = $('input[name="tesType"]:checked').val();
                if(type === 'Merkez') {
                    $('#divTesMerkezFields').show();
                    $('#divTesTasraFields').hide();
                } else {
                    $('#divTesMerkezFields').hide();
                    $('#divTesTasraFields').show();
                    loadMerkezTeskilatlar();
                }
            };

            function loadMerkezTeskilatlar() {
                var daireId = $('#addTesParent').val();
                var $select = $('#addTesBagliMerkez');
                
                // Clear and show loading state
                $select.empty().append('<option value="">Yükleniyor...</option>');
                
                var url = '/Birimler/GetMerkezTeskilatlarForTasra';
                if(daireId) {
                     url += '?daireId=' + daireId;
                }

                $.get(url, function(data) {
                    $select.empty().append('<option value="">Seçiniz...</option>');
                    if(data && data.length > 0) {
                        data.forEach(function(item) {
                             $select.append(new Option(item.ad, item.teskilatId));
                        });
                    }
                });
            }

            // Reload Merkez Teskilatlar when Daire changes (if Tasra is selected)
            $('#addTesParent').change(function() {
                var type = $('input[name="tesType"]:checked').val();
                if(type === 'Taşra') {
                    loadMerkezTeskilatlar();
                }
            });

            // ===================================
            // NEW: Koordinatorluk Modal Logic
            // ===================================
            var modalKoordinatorluk = document.getElementById('modalKoordinatorluk');
            if(modalKoordinatorluk) {
                modalKoordinatorluk.addEventListener('show.bs.modal', function () {
                        // Reset All Inputs
                        $('#addKoordAd').val('');
                        $('#addKoordTanim').val('');
                        $('#addKoordIl').val('').trigger('change'); 
                        
                        if(selectedTeskilatId) {
                            $('#addKoordParent').val(selectedTeskilatId).trigger('change');
                        } else {
                            $('#addKoordParent').val('').trigger('change');
                        }
                        
                        // Trigger filtering based on initial value
                        filterUsedCities();
                });
                
                $('#addKoordParent').change(function() {
                     filterUsedCities();
                });

                function filterUsedCities() {
                    var parentId = $('#addKoordParent').val();
                    if(!parentId) return;

                    var $citySelect = $('#addKoordIl');
                    $citySelect.find('option').prop('disabled', false); // Reset

                    // Find added cities for this parent
                    var existingCities = [];
                    $('#listKoordinatorluk .k-item[data-parent-id="' + parentId + '"]').each(function() {
                        var text = $(this).find('.item-name').text().trim();
                        var cityName = text.replace(' İl Koordinatörlüğü', '').trim();
                        existingCities.push(cityName); 
                    });

                    $citySelect.find('option').each(function() {
                        var optText = $(this).text();
                        if(existingCities.includes(optText)) {
                            $(this).prop('disabled', true);
                        }
                    });
                }
            }
            
            // NEW: Komisyon Modal Show Logic
            var modalKomisyon = document.getElementById('modalKomisyon');
            if(modalKomisyon) {
                modalKomisyon.addEventListener('show.bs.modal', function () {
                    $('#addKomAd').val('');
                    $('#addKomTanim').val('');
                    $('#addKomBagliMerkez').val('').trigger('change');

                    $('#addKomAd').val('');
                    $('#addKomTanim').val('');
                    $('#addKomBagliMerkez').val('').trigger('change');
                    $('#addKomIl').val('').trigger('change');
                    
                    // Reset visibility
                    $('#divKomBagliMerkez').hide();
                    $('#divKomIlContainer').hide();
                    $('#divKomAdContainer').show();

                    // FETCH FROM DATABASE: 
                    // To ensure deleted items are removed and new items are present,
                    // we fetch the list from server based on selectedTeskilatId.
                    
                    var $select = $('#addKomParent');
                    $select.empty().append('<option value="">Yükleniyor...</option>');
                    
                    if(selectedTeskilatId) {
                         // Cache-busting: add timestamp to force fresh fetch
                         var uniqueUrl = '/Birimler/GetKoordinatorlukler?teskilatId=' + selectedTeskilatId + '&_=' + new Date().getTime();
                         
                         $.get(uniqueUrl, function(data) {
                             $select.empty();
                             $select.append('<option value="">Seçiniz...</option>');
                             
                             if(data && data.length > 0) {
                                 data.forEach(function(item) {
                                     // Handle Casing (Camel vs Pascal)
                                     var id = item.koordinatorlukId || item.KoordinatorlukId;
                                     var title = item.ad || item.Ad;
                                     var tasra = (item.tasraTeskilatiVarMi !== undefined) ? item.tasraTeskilatiVarMi : item.TasraTeskilatiVarMi;
                                     var tur = item.tur || item.Tur;
                                     var ilId = item.ilId || item.IlId;
                                     
                                     // data-tasra-var-mi attribute added
                                     var option = new Option(title, id);
                                     $(option).attr('data-tasra-var-mi', tasra);
                                     $(option).attr('data-teskilat-id', selectedTeskilatId);
                                     if(tur) $(option).attr('data-tur', tur);
                                     if(ilId) $(option).attr('data-il-id', ilId);

                                     $select.append(option);
                                 });
                             }
                             
                             // Refresh Select2
                             if ($select.data('select2')) {
                                 $select.select2('destroy');
                             }
                             $select.select2({
                                 theme: 'bootstrap-5',
                                 dropdownParent: $select.closest('.modal'),
                                 width: '100%'
                             });
                             
                             // Set Selected if exists
                             if(selectedKoordId) {
                                 $select.val(selectedKoordId).trigger('change');
                             } else {
                                 $select.val('').trigger('change');
                             }
                         }).fail(function() {
                             $select.empty().append('<option value="">Hata oluştu</option>');
                         });
                    } else {
                        $select.empty().append('<option value="">Önce Teşkilat Seçiniz</option>');
                    }
                });
            }
            
            $('#addKoordParent').change(function() {
                var $selectedOption = $(this).find('option:selected');
                var val = $(this).val();
                
                // Get pre-stored or data- bound type from option if exists, 
                // Alternatively, we can inspect the DOM list item corresponding to this teskilat for 'Merkez' vs 'Taşra'
                var tesType = '';
                var $domRow = $('#row_tes_' + val);
                if ($domRow.length > 0) {
                     var domText = $domRow.find('.item-name').text();
                     // In the current system, Teskilat lists are divided by Type or we can tell by the parent Daire/BagliMerkez
                     // From previous modifications, "Tur" is "Merkez" or "Taşra". Since we don't have that directly on DOM easily without data attr,
                     // Let's use the 'data-tur' or simply check if it has a BagliMerkezId (which means it's Tasra). 
                     // The most robust way is to read 'data-tur' if we added it, but let's assume `data-tur` will be added to options.
                }
                
                // Read from option's data attribute which we will populate
                tesType = $selectedOption.attr('data-tur');

                updateKoordPreview();

                if(!val) {
                    $('#divKoordAdContainer').hide();
                    $('#divKoordTasraSwitch').hide(); 
                    $('#divKoordIlContainer').hide();
                    return;
                }

                if(tesType === 'Taşra') {
                    $('#divKoordAdContainer').hide();
                    $('#divKoordTasraSwitch').hide(); // Hide switch for Tasra
                    $('#divKoordIlContainer').show();

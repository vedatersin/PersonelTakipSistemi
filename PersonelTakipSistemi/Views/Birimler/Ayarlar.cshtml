                     });

                 } 
                 // 2. If Parent is Merkez (or others)
                 else {
                     // Check if Parent has provincial organization
                     if(tasraVarMi) {
                          // Redirect to Il selection
                          $('#divKomIlContainer').show();
                          $('#alertKomIlMerkez').show();
                         
                         // Filter City Dropdown: Show only valid cities
                         // Filter City Dropdown: Fetch valid cities from Server
                         var $citySelect = $('#addKomIl');
                         var targetKoordId = $(this).val(); // The currently selected Koordinatorluk ID
                         
                         $citySelect.empty().append('<option value="">Yükleniyor...</option>');
                         if ($citySelect.data('select2')) {
                             $citySelect.val('').trigger('change.select2'); // Reset selection
                         }
                         
                         $.get('/Birimler/GetIlListForMerkezKoordinatorluk?koordinatorlukId=' + targetKoordId, function(data) {
                              $citySelect.empty().append('<option value="">Seçiniz...</option>');
                              

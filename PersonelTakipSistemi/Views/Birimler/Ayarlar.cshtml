                                          selectedKoordinatorlukId = null;
                                          $('.k-item, .kom-item').hide().removeClass('d-flex');
                                          $('#koordInfo').show();
                                          $('#komInfo').show();
                                      } else if (parentType === 'koord') {
                                          selectedKoordinatorlukId = null;
                                          $('.kom-item').hide().removeClass('d-flex');
                                          $('#komInfo').show();
                                      }
                                  }
                              }
                         }
                     }
                 }

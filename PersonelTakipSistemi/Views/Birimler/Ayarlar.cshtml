        // Removes passive class from a parent item if it exists
        function updateParentPassiveState(type, parentId) {
            if(!parentId) return;
            var $parentRow;
            if (type === 'daire') $parentRow = $('#row_daire_' + parentId);
            else if (type === 'tes') $parentRow = $('#row_tes_' + parentId);
            else if (type === 'koord') $parentRow = $('#row_koord_' + parentId);

            if($parentRow && $parentRow.length > 0) {
                // Determine passive class name based on type
                var passiveClass = type === 'daire' ? 'daire-passive' : (type === 'tes' ? 'tes-passive' : 'k-passive');
                
                if($parentRow.hasClass(passiveClass)) {
                    $parentRow.removeClass(passiveClass);
                    // Also sort the parent's list since its status changed from passive to active
                    var $listContainer = $parentRow.closest('ul');
                    if($listContainer.length > 0) {
                         sortListDynamically($listContainer, passiveClass);
                    }
                }
            }
        }

        // Adds passive class to a parent item if it has no children left
        function checkAndApplyPassiveState(type, parentId) {
            if(!parentId) return;
            var childClass;
            var parentType;
            if(type === 'tes') { parentType = 'daire'; childClass = '.tes-item'; }
            else if(type === 'koord') { parentType = 'tes'; childClass = '.k-item'; }
            else if(type === 'kom') { parentType = 'koord'; childClass = '.kom-item'; }
            
            if(!parentType) return;
            
            // Count children with this parentId that are STILL visible/existing (excluding just removed ones or those hidden intentionally differently? 
            // Better to check DOM elements directly
            var childCount = $(childClass + '[data-parent-id="' + parentId + '"]').length;
            
            // Also account for komisyon's provincial links
            if(type === 'kom') {
                 childCount += $('.kom-item[data-bagli-merkez-id="' + parentId + '"]').length;
            }

            if(childCount === 0) {
                 var $parentRow = $('#row_' + parentType + '_' + parentId);
                 if($parentRow.length > 0) {
                     var passiveClass = parentType === 'daire' ? 'daire-passive' : (parentType === 'tes' ? 'tes-passive' : 'k-passive');
                     if(!$parentRow.hasClass(passiveClass)) {
                         $parentRow.addClass(passiveClass);
                         var $listContainer = $parentRow.closest('ul');
                         if($listContainer.length > 0) {
                              sortListDynamically($listContainer, passiveClass);
                              
                              // Automatically select the first active sibling if the newly passive item was selected
                              if ($parentRow.hasClass('active')) {
                                  var parentIdAttr = $parentRow.attr('data-parent-id');
                                  var selector = 'li:not(.' + passiveClass + ')';
                                  if (parentIdAttr !== undefined && parentIdAttr !== false) {
                                      selector += '[data-parent-id="' + parentIdAttr + '"]';
                                  }
                                  
                                  var $firstActiveSibling = $listContainer.children(selector).first();
                                  
                                  if($firstActiveSibling.length > 0) {
                                      var siblingId = parseInt($firstActiveSibling.attr('data-id'));
                                      if (parentType === 'daire') selectDaire($firstActiveSibling[0], siblingId);
                                      else if (parentType === 'tes') selectTeskilat($firstActiveSibling[0], siblingId);
                                      else if (parentType === 'koord') selectKoordinatorluk($firstActiveSibling[0], siblingId);
                                  } else {
                                      // If no active sibling found, just deselect visually and reset downstream variables
                                      $parentRow.removeClass('active');
                                      if (parentType === 'daire') {
                                           selectedDaireId = null;
                                           selectedTeskilatId = null;
                                           selectedKoordinatorlukId = null;

        }

        // Sorts a ul list. First active items (alphabetical), then passive items (alphabetical)
        function sortListDynamically($listContainer, passiveClass) {
            var items = $listContainer.children('li.list-group-item:not([id$="Info"])').get();
            
            items.sort(function(a, b) {
                var $a = $(a);
                var $b = $(b);
                
                var aIsPassive = $a.hasClass(passiveClass);
                var bIsPassive = $b.hasClass(passiveClass);
                
                // 1. Group by active/passive
                if (aIsPassive && !bIsPassive) return 1;  // a is passive, b is active -> b comes first
                if (!aIsPassive && bIsPassive) return -1; // a is active, b is passive -> a comes first
                
                // 2. Alphabetical sort within the same group
                var aText = $a.find('.item-name').text().trim().toLowerCase();
                var bText = $b.find('.item-name').text().trim().toLowerCase();
                
                // Turkish character sorting
                return aText.localeCompare(bText, 'tr');
            });

            // Re-append sorted items
            $.each(items, function(idx, itm) { $listContainer.append(itm); });
        }



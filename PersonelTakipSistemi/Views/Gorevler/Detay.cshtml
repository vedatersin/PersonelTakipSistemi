@model PersonelTakipSistemi.Models.Gorev

@{
    ViewData["Title"] = "Görev Detayı";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var statusClass = Model.GorevDurumId switch
    {
        1 => "bg-label-warning",
        2 => "bg-label-info",
        3 => "bg-label-success",
        4 => "bg-label-danger",
        _ => "bg-label-secondary"
    };
}

<div class="row">
    <div class="col-md-12 mb-3">
        <a asp-action="Gorevlerim" class="btn btn-label-secondary mb-3">
            <i class="bx bx-arrow-back me-1"></i> Görevlerim'e Dön
        </a>
    </div>

    <!-- Main Detail Card -->
    <div class="col-xl-8 col-lg-7 col-md-12">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">@Model.Ad</h5>
                <span class="badge @statusClass">@Model.GorevDurum?.Ad</span>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-6 mb-3">
                        <label class="form-label text-muted">Kategori</label>
                        <div class="fw-bold">@Model.Kategori?.Ad</div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label text-muted">Durum Açıklaması / Notu</label>
                        <div class="fw-bold">
                            @if(!string.IsNullOrEmpty(Model.DurumAciklamasi))
                            {
                                @Model.DurumAciklamasi
                            }
                            else
                            {
                                <em class="text-muted">-</em>
                            }
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label text-muted">Açıklama</label>
                    <div class="border rounded p-3 bg-light">
                        @if(!string.IsNullOrEmpty(Model.Aciklama))
                        {
                            @Html.Raw(Model.Aciklama.Replace("\n", "<br>"))
                        }
                        else 
                        {
                             <span class="text-muted">Açıklama yok.</span>
                        }
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <label class="form-label text-muted">Başlangıç Tarihi</label>
                        <div><i class="bx bx-calendar me-1"></i> @Model.BaslangicTarihi.ToString("dd.MM.yyyy")</div>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label text-muted">Bitiş Tarihi</label>
                        <div><i class="bx bx-calendar-check me-1"></i> @(Model.BitisTarihi.HasValue ? Model.BitisTarihi.Value.ToString("dd.MM.yyyy") : "-")</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Sidebar / Assignments Card -->
    <div class="col-xl-4 col-lg-5 col-md-12">
        <div class="card mb-4">
             <div class="card-header border-bottom">
                 <h6 class="mb-0">Atamalar</h6>
             </div>
             <div class="card-body p-0">
                 <ul class="list-group list-group-flush">
                     <!-- Personeller -->
                     @if(Model.GorevAtamaPersoneller != null && Model.GorevAtamaPersoneller.Any())
                     {
                         <li class="list-group-item bg-light fw-bold small text-uppercase">Personeller</li>
                         @foreach(var ap in Model.GorevAtamaPersoneller)
                         {
                             <li class="list-group-item d-flex align-items-center">
                                 <div class="avatar avatar-xs me-2">
                                     <span class="avatar-initial rounded-circle bg-label-primary">
                                         @(ap.Personel?.Ad?.Substring(0,1))@(ap.Personel?.Soyad?.Substring(0,1))
                                     </span>
                                 </div>
                                 @if(User.IsInRole("Admin") || User.IsInRole("Yönetici") || User.IsInRole("Editör"))
                                 {
                                     <a href="/Personel/Detay/@ap.PersonelId" class="text-body fw-semibold">
                                         @ap.Personel?.Ad @ap.Personel?.Soyad
                                     </a>
                                 }
                                 else
                                 {
                                     <span>@ap.Personel?.Ad @ap.Personel?.Soyad</span>
                                 }
                             </li>
                         }
                     }

                     <!-- Teskilatlar -->
                     @if(Model.GorevAtamaTeskilatlar != null && Model.GorevAtamaTeskilatlar.Any())
                     {
                          <li class="list-group-item bg-light fw-bold small text-uppercase mt-2">Teşkilatlar</li>
                          @foreach(var at in Model.GorevAtamaTeskilatlar)
                          {
                              <li class="list-group-item">
                                  <i class="bx bx-building me-2 text-muted"></i> @at.Teskilat?.Ad
                              </li>
                          }
                     }
                      <!-- Coordination and Commissions -->
                     @if(Model.GorevAtamaKoordinatorlukler != null && Model.GorevAtamaKoordinatorlukler.Any())
                     {
                          <li class="list-group-item bg-light fw-bold small text-uppercase mt-2">Koordinatörlükler</li>
                          @foreach(var at in Model.GorevAtamaKoordinatorlukler)
                          {
                              <li class="list-group-item">
                                  <i class="bx bx-business me-2 text-muted"></i> @at.Koordinatorluk?.Ad
                              </li>
                          }
                     }
                      @if(Model.GorevAtamaKomisyonlar != null && Model.GorevAtamaKomisyonlar.Any())
                     {
                          <li class="list-group-item bg-light fw-bold small text-uppercase mt-2">Komisyonlar</li>
                          @foreach(var at in Model.GorevAtamaKomisyonlar)
                          {
                              <li class="list-group-item">
                                  <i class="bx bx-group me-2 text-muted"></i> @at.Komisyon?.Ad
                              </li>
                          }
                     }
                 </ul>
                 
                 @if(
                     (!Model.GorevAtamaPersoneller?.Any() ?? true) && 
                     (!Model.GorevAtamaTeskilatlar?.Any() ?? true) && 
                     (!Model.GorevAtamaKoordinatorlukler?.Any() ?? true) && 
                     (!Model.GorevAtamaKomisyonlar?.Any() ?? true)
                   )
                 {
                     <div class="p-3 text-center text-muted">Atama bulunmuyor.</div>
                 }
             </div>
        </div>
        
        <!-- HISTORY TIMELINE -->
        <div class="card">
            <div class="card-header border-bottom">
                <h6 class="mb-0">Görev Tarihçesi</h6>
            </div>
            <div class="card-body p-3">
                @if(ViewBag.History != null)
                {
                    <ul class="timeline">
                        @foreach(var item in (List<PersonelTakipSistemi.Models.SistemLog>)ViewBag.History)
                        {
                            var title = item.IslemTuru;
                            var detail = item.Detay ?? item.Aciklama;
                            var badgeClass = "bg-label-primary";

                            // Logic to refine display
                            if (item.IslemTuru == "Durum")
                            {
                                // Try to extract status name
                                if (!string.IsNullOrEmpty(detail) && detail.Contains("Yeni Durum: "))
                                {
                                    var start = detail.IndexOf("Yeni Durum: ") + 12;
                                    var end = detail.IndexOf(",", start);
                                    if (end == -1) end = detail.Length;
                                    title = detail.Substring(start, end - start).Trim();
                                    badgeClass = "bg-label-info";
                                }
                                else 
                                {
                                    title = "Durum Değişikliği";
                                }
                            }
                            else if (item.IslemTuru == "Görev Ekleme")
                            {
                                title = "Görev Oluşturuldu";
                                badgeClass = "bg-label-success";
                            }
                            else if (item.IslemTuru == "Görev Atama")
                            {
                                title = "Atama Yapıldı";
                                badgeClass = "bg-label-warning";
                            }

                            // Clean up detail text (Remove [Görev ID: ...])
                            if (!string.IsNullOrEmpty(detail))
                            {
                                var bracketIndex = detail.IndexOf("]");
                                if (bracketIndex > -1 && detail.Contains("[Görev ID:"))
                                {
                                    detail = detail.Substring(bracketIndex + 1).Trim();
                                }
                                // Remove "Yeni Durum: ..." repetition if used as title
                                if(item.IslemTuru == "Durum" && detail.Contains("Yeni Durum:")) {
                                     // Maybe show only the "Açıklama" part if present?
                                     // Format is "Yeni Durum: X, Açıklama: Y"
                                     var descIndex = detail.IndexOf("Açıklama: ");
                                     if(descIndex > -1) {
                                         detail = detail.Substring(descIndex + 10).Trim();
                                     } else {
                                         detail = ""; // Clear if only status change without note
                                     }
                                }
                            }

                            <li class="timeline-item timeline-item-transparent text-start ps-3 border-start" style="margin-left: 0.5rem; list-style: none;">
                                <span class="timeline-point timeline-point-primary" style="margin-left: -1.4rem;"></span>
                                <div class="timeline-event">
                                    <div class="d-flex justify-content-between flex-wrap mb-1">
                                        <div class="fw-bold text-dark">@title</div>
                                        <small class="text-muted">@item.Tarih.ToString("dd.MM.yyyy HH:mm")</small>
                                    </div>
                                    <div class="mb-1 small text-muted">
                                        <i class="bx bx-user me-1"></i> @item.KullaniciAdSoyad
                                    </div>
                                    @if(!string.IsNullOrEmpty(detail)) {
                                        <p class="mb-0 small text-body mt-1">
                                            @detail
                                        </p>
                                    }
                                </div>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-muted small">Kayıt bulunamadı.</p>
                }
            </div>
        </div>
    </div>
</div>

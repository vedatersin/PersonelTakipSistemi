@model List<PersonelTakipSistemi.Models.Gorev>

@{
    ViewData["Title"] = "Görevlerim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header border-bottom">
        <h5 class="card-title mb-0">Görevlerim</h5>
        <small class="text-muted">Size atanan aktif görevler listelenmektedir.</small>
    </div>
    <div class="table-responsive text-nowrap">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Görev Adı</th>
                    <th>Kategori</th>
                    <th>Durum</th>
                    <th>Başlangıç / Bitiş</th>
                    <th class="text-end">İşlem</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        var statusClass = item.GorevDurumId switch
                        {
                            1 => "bg-label-warning", // Atanmayı Bekliyor
                            2 => "bg-label-info", // Devam Ediyor
                            3 => "bg-label-success", // Tamamlandı
                            4 => "bg-label-danger", // İptal
                            _ => "bg-label-secondary"
                        };
                        
                        <tr>
                            <td>
                                <strong>@item.Ad</strong>
                                @if(!string.IsNullOrEmpty(item.Aciklama))
                                {
                                    <div class="small text-muted" style="max-width: 300px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                                        @item.Aciklama
                                    </div>
                                }
                            </td>
                            <td><span class="badge bg-label-primary">@item.Kategori?.Ad</span></td>
                            <td>
                                <span class="badge @statusClass">@item.GorevDurum?.Ad</span>
                                @if(!string.IsNullOrEmpty(item.DurumAciklamasi))
                                {
                                     <i class="bx bx-info-circle text-muted ms-1" data-bs-toggle="tooltip" title="@item.DurumAciklamasi"></i>
                                }
                            </td>
                            <td>
                                <div class="d-flex flex-column small">
                                    <span>@item.BaslangicTarihi.ToString("dd.MM.yyyy")</span>
                                    <span class="text-muted">@(item.BitisTarihi.HasValue ? item.BitisTarihi.Value.ToString("dd.MM.yyyy") : "-")</span>
                                </div>
                            </td>
                            <td class="text-end">
                                <a asp-action="Detay" asp-route-id="@item.GorevId" class="btn btn-sm btn-primary">
                                    <i class="bx bx-show me-1"></i> Görüntüle
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center py-4">
                            <div class="text-muted">
                                <i class="bx bx-task mb-2" style="font-size: 2rem;"></i>
                                <p>Size atanan herhangi bir görev bulunmamaktadır.</p>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@model PersonelTakipSistemi.ViewModels.PersonelDetayViewModel
@{
    ViewData["Title"] = "Personel Detay";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Personel Detayları</h5>
        <a asp-action="Ekle" class="btn btn-primary">Yeni Personel Ekle</a>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4 text-center">
                @if (!string.IsNullOrEmpty(Model.FotografYolu))
                {
                    <img src="@Model.FotografYolu" alt="@Model.Ad @Model.Soyad" class="img-fluid rounded-circle mb-3" style="width: 150px; height: 150px; object-fit: cover;">
                }
                else
                {
                    <div class="bg-secondary text-white rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 150px; height: 150px;">
                        <i class="bx bx-user fs-1"></i>
                    </div>
                }
                <h4>@Model.Ad @Model.Soyad</h4>
                <p class="text-muted">@Model.Brans</p>
                <div class="badge bg-@(Model.AktifMi ? "success" : "danger")">
                    @(Model.AktifMi ? "Aktif Görevde" : "Pasif")
                </div>
            </div>
            <div class="col-md-8">
                <table class="table table-borderless">
                    <tbody>
                        <tr>
                            <th style="width: 30%">TC Kimlik No</th>
                            <td>@Model.TcKimlikNo</td>
                        </tr>
                        <tr>
                            <th>Telefon</th>
                            <td>@Model.Telefon</td>
                        </tr>
                        <tr>
                            <th>E-posta</th>
                            <td>@Model.Eposta</td>
                        </tr>
                        <tr>
                            <th>Cinsiyet</th>
                            <td>@Model.Cinsiyet</td>
                        </tr>
                        <tr>
                            <th>Görevli İl</th>
                            <td>@Model.GorevliIl</td>
                        </tr>
                        <tr>
                            <th>Kadro Kurum</th>
                            <td>@Model.KadroKurum</td>
                        </tr>
                        <tr>
                            <th>Kayıt Tarihi</th>
                            <td>@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <hr class="my-4">

        <div class="row">
            <div class="col-md-6 mb-4">
                <h6 class="fw-bold">Yazılım Bilgisi</h6>
                @if(Model.Yazilimlar != null && Model.Yazilimlar.Any())
                {
                    <div class="d-flex flex-wrap gap-2">
                        @foreach(var item in Model.Yazilimlar)
                        {
                            <span class="badge bg-label-primary">@item</span>
                        }
                    </div>
                }
                else
                {
                    <span class="text-muted">Yazılım bilgisi girilmemiş.</span>
                }
            </div>
            <div class="col-md-6 mb-4">
                <h6 class="fw-bold">Uzmanlık Alanları</h6>
                @if(Model.Uzmanliklar != null && Model.Uzmanliklar.Any())
                {
                    <div class="d-flex flex-wrap gap-2">
                        @foreach(var item in Model.Uzmanliklar)
                        {
                            <span class="badge bg-label-info">@item</span>
                        }
                    </div>
                }
                else
                {
                    <span class="text-muted">Uzmanlık bilgisi girilmemiş.</span>
                }
            </div>
             <div class="col-md-6 mb-4">
                <h6 class="fw-bold">Görev Türleri</h6>
                @if(Model.GorevTurleri != null && Model.GorevTurleri.Any())
                {
                    <div class="d-flex flex-wrap gap-2">
                        @foreach(var item in Model.GorevTurleri)
                        {
                            <span class="badge bg-label-warning">@item</span>
                        }
                    </div>
                }
                else
                {
                    <span class="text-muted">Görev türü seçilmemiş.</span>
                }
            </div>
             <div class="col-md-6 mb-4">
                <h6 class="fw-bold">İş Nitelikleri</h6>
                @if(Model.IsNitelikleri != null && Model.IsNitelikleri.Any())
                {
                    <div class="d-flex flex-wrap gap-2">
                        @foreach(var item in Model.IsNitelikleri)
                        {
                            <span class="badge bg-label-success">@item</span>
                        }
                    </div>
                }
                else
                {
                    <span class="text-muted">İş niteliği seçilmemiş.</span>
                }
            </div>
        </div>
    </div>
</div>
